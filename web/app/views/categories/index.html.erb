<div style="text-align: center;">
<%  @category.sort.each do |id,name| %>
  <h2 style="display: inline;"><%= link_to name, :action => :show, :id => id %></h2>
<% end %>
</div>



<h1>Listing torrents by category</h1>

<% @torrents_by_category.each do |category,torrents| %>
  <% if !torrents.nil?  %>
    <h3><%= @category[category] %></h3>
    <%= render :partial => "shared/torrents", :locals => {:torrents => torrents, :display_categories => false} %>
  <% end %>
<% end %>

