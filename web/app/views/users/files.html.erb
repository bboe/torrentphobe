<h1>Listing torrents for <%=h @user.name %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Size</th>
    <th>Category</th>
    <th>Tags</th>
  </tr>

<% for torrent in @torrents %>
  <tr>
    <td><%=h torrent.name %></td>
    <td><%=h display_size(torrent.size) %></td>
    <td><%=h torrent.category.name %></td>
    <td><%=h torrent.tag_list.length %></td>
    <td><%= link_to 'Show', torrent %></td>
    <td><%= link_to "Download" , :controller=> :torrents, :action => :download_torrent_file, :id => torrent %></td>
  </tr>
<% end %>
</table>

<br />
<br />


<%= form_tag( :action => 'search' )%>
<%= text_field 'q', nil  %>
<%= submit_tag 'Search' %>

</form>
<br />
<%= link_to 'Back', users_path %>
