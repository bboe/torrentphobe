<% if users.length > 0 %>
<table>
  <tr>
    <th>FB ID</th>
    <th>Name</th>
    <th></th>
  </tr>

<% for user in users %>
  <tr>
    <td><%=h user.fb_id %></td>
    <td><%= link_to user.name, :action => :show, :id => user.id %></td>
    <td><%= link_to 'Uploaded Files', {:action => :files, :id => user.id} %></td>
  </tr>
<% end %>
</table>
<% else %>
No users available
<% end %>
<br />
