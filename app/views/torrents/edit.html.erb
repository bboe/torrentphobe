<h1>Editing torrent</h1>

<% form_for(@torrent) do |f| %>
  <%= f.error_messages %>
  <p style="font-weight: bold">
    Name:
    <%= f.text_field :name, :size => 50 %>
  </p>
  <p style="font-weight: bold">
     Category:
    <%=  f.collection_select(:category_id, Category.find(:all), :id, :name, {}) %>
 </p>
 <p style="font-weight: bold">
     Tags (Comma Separated):
    <%= f.text_field :tag_list, :size => 40 %>
 </p>


    <p style="font-weight: bold; text-align: center;">
      <%= f.submit "Update It!", :style=>"font-size: 24px; font-weight: bold;" %>
    </p>
<% end %>

<%= button_to 'Back', @torrent, :method => :get %>
